{% extends "layout.njk" %}

{% block title %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block header %}

    <header class="header-receitas">
        <div class="logo-receitas">
            <a href="/">
                <img src="/image/logo-receitas.png" alt="logo">
            </a>
        </div>
    </header>

{% endblock %}
        
{% block content %}
    <section class="receitas-mais-acessadas">
        <div class="container">
            <div class="page-receita-topo">
                <h2>Gerenciar receitas</h2>
                <a href="/receitas/create" class="btn-primary">Nova receita</a>
            </div>

            <div class="receitas-mais-acessadas__content">
                {% for recipe in recipes %}
                    <div class="receitas-mais-acessadas__card" id="{{ recipe.id }}">
                        <div class="receitas-mais-acessadas__card-image" style="background-image: url({{ recipe.url_imagem }})"></div>
                        <p class="receitas-mais-acessadas__card-title">{{ recipe.titulo }}</p>
                        <span class="receitas-mais-acessadas__card-autor">{{ recipe.autor }}</span>
                    </div>
                {% endfor%}
            </div>
        </div>
    </section>
{% endblock %}