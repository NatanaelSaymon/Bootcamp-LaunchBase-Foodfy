{% extends "layout.njk" %}

{% block title %}
  <title>Foodfy - Receitas</title>
{% endblock %}

{% block header %}

  <header class="header-receitas">
      <div class="logo-receitas">
          <a href="/receitas">
              <img src="/image/logo-receitas.png" alt="logo">
          </a>
      </div>
  </header>

{% endblock %}

{% block content %}
  <section class="receitas-mais-acessadas">
    <div class="container">
      <div class="receitas">
        <div class="recipes">

          <div class="page-show-topo">
            <h3>Receita: {{recipes.nome}}</h3>
            <a href="/receitas/{{ recipes.id }}/edit" class="button">Editar receita</a>
          </div>

          <section class="avatar" style="background-image: url({{recipes.imagem_receita}})"> 
            {# Imagem da receita #}
          </section>

          <p class="receita-title">{{recipes.nome}}</p>
          <span class="receita-autor">por {{recipes.autor}}</span>
         
          <div class="items-recipes">

            <h2>Ingredientes</h2>

            <div id="ingredientes">
              <ul>
                {% for ingrediente in recipes.ingredientes %}
                  <li>{{ingrediente}}</li>
                {% endfor %}
              </ul>
            </div>
        
            <h2>Modo de preparo</h2>

            <div id="preparo">
              <ul>
                {% for preparo in recipes.modo_preparo %}
                  <li>{{preparo}}</li>
                {% endfor %}
              </ul>
            </div>
          
            <h2>Informações</h2>

            <div id="informacoes">
              <p>{{recipes.info_adicionais}}</p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}