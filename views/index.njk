{% extends "layout.njk" %}

{% block content %}
    <section class="banner">
        <div class="container">
            <div class="banner-principal">
                <div class="banner-text">
                    <h1>As melhores receitas</h1>
                    <p>Aprenda construir os melhores pratos <br>
                        com receitas criadas por profissionais <br>
                        do mundo inteiro</p>
                </div>
                <div class="banner-img">
                    <img src="/image/chef.png">
                </div>
            </div>
        </div>
    </section>

    <section class="receitas-mais-acessadas">
        <div class="container">
            <h2>Mais acessadas</h2>
            <div class="receitas">
                <div class="card" id="burger">
                    <img src="/image/burger.png" class="img-receitas teste" alt="hamburger">
                    <p class="receita-title">Triplo bacon burger</p>
                    <span class="receita-autor">por Jorge Relato</span>
                </div>

                <div class="card" id="pizza">
                    <img src="/image/pizza.png" class="img-receitas" alt="pizza">
                    <p class="receita-title" class="receita-title">Pizza 4 estações</p>
                    <span class="receita-autor">por Fabiana Melo</span>
                </div>

                <div class="card" id="espaguete">
                    <img src="/image/espaguete.png" class="img-receitas" alt="espaguete">
                    <p class="receita-title">Espaguete ao alho</p>
                    <span class="receita-autor">por Julia Kinoto</span>
                </div>

                <div class="card" id="lasanha">
                    <img src="/image/lasanha.png" class="img-receitas" alt="lasanha">
                    <p class="receita-title">Lasanha mac n' cheese</p>
                    <span class="receita-autor">por Juliano Vieria</span>
                </div>

                <div class="card" id="doce">
                    <img src="/image/doce.png" class="img-receitas" alt="doce">
                    <p class="receita-title">Docinho pão-do-céu</p>
                    <span class="receita-autor">por Ricardo Golvea</span>
                </div>

                <div class="card" id="asinhas">
                    <img src="/image/asinhas.png" class="img-receitas" alt="asinhas">
                    <p class="receita-title">Asinhas de frango ao barbecue</p>
                    <span class="receita-autor">por Vania Steroski</span>
                </div>
            </div>
        </div>
    </section>
{% endblock %}