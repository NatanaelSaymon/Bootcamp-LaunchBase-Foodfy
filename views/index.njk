{% extends "layout.njk" %}

{% block header %}
    <header class="header">
        <!-- LOGO -->
        <div class="logo">
            <a href="/">
                <img src="/image/logo.png">
            </a>
        </div>

        <nav>
            <!-- MENU -->
            <ul class="menu">
                <li><a href="/sobre">Sobre</a></li>
                <li><a href="/receitas">Receitas</a></li>
            </ul>
        </nav>
    </header>
{% endblock %}

{% block content %}
    <section class="banner">
        <div class="container">
            <div class="banner-principal">
                <div class="banner-text">
                    <h1>As melhores receitas</h1>
                    <p>Aprenda construir os melhores pratos <br>
                        com receitas criadas por profissionais <br>
                        do mundo inteiro</p>
                </div>
                <div class="banner-img">
                    <img src="/image/chef.png">
                </div>
            </div>
        </div>
    </section>

    <section class="receitas-mais-acessadas">
        <div class="container">
            <h2>Mais acessadas</h2>
            <div class="receitas">
                {% for recipe in recipes %}
                    <div class="card" id="{{recipe.id}}">
                        <div class="card-img" style="background-image: url({{ recipe.image }})"></div>
                        {# <img src="{{ recipe.image }}" class="img-receitas" alt="Imagem de {{ recipe.title }}"> #}
                        <p class="receita-title"> {{ recipe.title }} </p>
                        <span class="receita-autor"> {{ recipe.author }} </span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}